    site: "https://www.fathimafarheen.vercel.app",
  },
  {
    name: "Naima Fathima",
    img: "https://hackabudhabi.com/team/_assets/media/051f3588083227be8694ed9c01cb9655.jpg",
    site: "https://www.hackabudhabi.com",
  },
  {
    name: "Abhinav Rajesh",
    img: "https://hackabudhabi.com/team/_assets/media/96613b1d7f08eda5ee22cdc7d8cc8f0b.png",
    site: "https://www.hackabudhabi.com",
  },
  {
    name: "Fawzan Fasi",
